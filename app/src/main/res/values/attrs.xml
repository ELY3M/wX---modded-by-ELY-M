<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ImageMap">
        <attr name="map" format="string" />
        <attr name="fitImageToScreen" format="boolean" />
        <attr name="scaleFromOriginal" format="boolean" />
        <attr name="maxSizeFactor" format="float" />
    </declare-styleable>
    <declare-styleable name="ColorPicker">
        <attr name="color_wheel_radius" format="dimension" />
        <attr name="color_wheel_thickness" format="dimension" />
        <attr name="color_center_radius" format="dimension" />
        <attr name="color_center_halo_radius" format="dimension" />
        <attr name="color_pointer_radius" format="dimension" />
        <attr name="color_pointer_halo_radius" format="dimension" />
    </declare-styleable>
    <declare-styleable name="SaturationBar">
        <attr name="bar_thickness" format="dimension" />
        <attr name="bar_length" format="dimension" />
        <attr name="bar_pointer_radius" format="dimension" />
        <attr name="bar_pointer_halo_radius" format="dimension" />
        <attr name="bar_orientation_horizontal" format="boolean" />
    </declare-styleable>
    <declare-styleable name="SVBar">
        <attr name="bar_thickness_svbar" format="dimension" />
        <attr name="bar_length_svbar" format="dimension" />
        <attr name="bar_pointer_radius_svbar" format="dimension" />
        <attr name="bar_pointer_halo_radius_svbar" format="dimension" />
        <attr name="bar_orientation_horizontal_svbar" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ValueBar">
        <attr name="bar_thickness_vbar" format="dimension" />
        <attr name="bar_length_vbar" format="dimension" />
        <attr name="bar_pointer_radius_vbar" format="dimension" />
        <attr name="bar_pointer_halo_radius_vbar" format="dimension" />
        <attr name="bar_orientation_horizontal_vbar" format="boolean" />
    </declare-styleable>
    <declare-styleable name="OpacityBar">
        <attr name="obar_thickness" format="dimension" />
        <attr name="obar_length" format="dimension" />
        <attr name="obar_pointer_radius" format="dimension" />
        <attr name="obar_pointer_halo_radius" format="dimension" />
        <attr name="obar_orientation_horizontal" format="boolean" />
    </declare-styleable>
</resources>
