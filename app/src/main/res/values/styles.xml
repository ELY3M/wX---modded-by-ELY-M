<resources>
    <style name="AppCompatAlertDialogStyle"  parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/yellow</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:background">@color/primary_blue</item>
    </style>

    <style name="MyCustomTheme_ActionBar" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/bg_blue</item>
        <item name="android:colorBackgroundCacheHint">@color/my_custom_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primary_dark_blue</item>
        <item name="colorAccent">@color/primary_blue</item>
        <item name="actionOverflowMenuStyle">@style/ABOverflow</item>
        <item name="actionDropDownStyle">@style/MyDropDownNav2</item>
        <item name="android:dialogTheme">@style/MyDialogTheme</item>
        <item name="android:alertDialogTheme">@style/MyDialogTheme</item>
    </style>

    <style name="MyCustomTheme_NOAB" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/bg_blue</item>
        <item name="android:colorBackgroundCacheHint">@color/my_custom_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primary_dark_blue</item>
        <item name="colorAccent">@color/blue_accent</item>
        <item name="actionOverflowMenuStyle">@style/ABOverflow</item>
        <item name="actionDropDownStyle">@style/MyDropDownNav2</item>
        <item name="android:dialogTheme">@style/MyDialogTheme</item>
        <item name="android:alertDialogTheme">@style/MyDialogTheme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="MyCustomTheme_white_NOAB" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/bg_blue</item>
        <item name="android:colorBackgroundCacheHint">@color/my_custom_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primary_dark_blue</item>
        <item name="colorAccent">@color/white</item>
        <item name="actionOverflowMenuStyle">@style/ABOverflowWhite</item>
        <item name="actionDropDownStyle">@style/MyDropDownNav2White</item>
        <item name="android:dialogTheme">@style/MyDialogThemeWhite</item>
        <item name="android:alertDialogTheme">@style/MyDialogThemeWhite</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorControlActivated">@color/bg_blue</item>
        <item name="colorSwitchThumbNormal">@color/blue_accent</item>
        <item name="android:colorForeground">@color/gray_light</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="MyCustomTheme_whiter_NOAB" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/off_white</item>
        <item name="android:colorBackgroundCacheHint">@color/my_custom_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryDark">@color/primary_dark_blue</item>
        <item name="colorAccent">@color/white</item>
        <item name="actionOverflowMenuStyle">@style/ABOverflowWhite</item>
        <item name="actionDropDownStyle">@style/MyDropDownNav2White</item>
        <item name="android:dialogTheme">@style/MyDialogThemeWhite</item>
        <item name="android:alertDialogTheme">@style/MyDialogThemeWhite</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorControlActivated">@color/bg_blue</item>
        <item name="colorSwitchThumbNormal">@color/blue_accent</item>
        <item name="android:colorForeground">@color/gray_light</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="SpinnerThemeOverlay" parent="">
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="MyCustomTheme_mixedBlue_NOAB" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/primary_dark_blue</item>
        <item name="android:colorBackgroundCacheHint">@color/my_custom_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/bg_blue</item>
        <item name="colorPrimaryDark">@color/primary_dark_blue</item>
        <item name="colorAccent">@color/primary_blue</item>
        <item name="actionOverflowMenuStyle">@style/ABOverflow</item>
        <item name="actionDropDownStyle">@style/MyDropDownNav2</item>
        <item name="android:dialogTheme">@style/MyDialogTheme</item>
        <item name="android:alertDialogTheme">@style/MyDialogTheme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorControlActivated">@color/primary_dark_blue</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="MyCustomTheme_DarkBlue_NOAB" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/primary_dark_blue</item>
        <item name="android:colorBackgroundCacheHint">@color/my_custom_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/bg_blue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/primary_blue</item>
        <item name="actionOverflowMenuStyle">@style/ABOverflow</item>
        <item name="actionDropDownStyle">@style/MyDropDownNav2</item>
        <item name="android:dialogTheme">@style/MyDialogTheme</item>
        <item name="android:alertDialogTheme">@style/MyDialogTheme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="MyCustomTheme_orange_NOAB" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/primary_orange</item>
        <item name="android:colorBackgroundCacheHint">@color/my_custom_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/bg_orange</item>
        <item name="colorPrimaryDark">@color/dark_orange</item>
        <item name="colorAccent">@color/primary_orange</item>
        <item name="actionOverflowMenuStyle">@style/ABOverflow</item>
        <item name="actionDropDownStyle">@style/MyDropDownNav2</item>
        <item name="android:dialogTheme">@style/MyDialogTheme</item>
        <item name="android:alertDialogTheme">@style/MyDialogTheme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/primary_dark_blue</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="MyDialogThemeWhite" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="MyDropDownNav2" parent="Widget.AppCompat.Spinner.DropDown.ActionBar"  >
        <item name="android:popupBackground">@color/primary_dark_blue</item>
    </style>

    <style name="MyDropDownNav2White" parent="Widget.AppCompat.Spinner.DropDown.ActionBar"  >
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="ABOverflow" parent="Base.Widget.AppCompat.PopupMenu.Overflow"  >
        <item name="android:popupBackground">@color/primary_dark_blue</item>
    </style>

    <style name="ABOverflowWhite" parent="Base.Widget.AppCompat.PopupMenu.Overflow"  >
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="MyCustomTheme_Holo_Dark_NOAB" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="MyCustomTheme_Green_NOAB" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green_light</item>
        <item name="android:windowBackground">@color/green_medium</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="MyCustomTheme_Gray_NOAB" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/gray_light</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/gray_light</item>
        <item name="android:windowBackground">@color/gray_dark</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Telecine -->
    <style name="Theme.Telecine.Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>



