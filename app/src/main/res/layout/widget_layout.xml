<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/padding_widget"
    android:background="@color/bg_blue"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_widget"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/b_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/wx_logo"
            android:src="@drawable/wx" />

        <ImageView
            android:id="@+id/b_radar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:contentDescription="@string/action_radar"
            android:gravity="center"
            app:srcCompat="@drawable/ic_flash_on_24dp_white" />

        <ImageView
            android:id="@+id/b_cloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:contentDescription="@string/visible_sat"
            android:gravity="center"
            app:srcCompat="@drawable/ic_cloud_24dp_white" />

        <ImageView
            android:id="@+id/b_afd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:contentDescription="@string/area_forecast_discussion"
            android:gravity="center"
            app:srcCompat="@drawable/ic_info_outline_24dp_white" />

        <ImageView
            android:id="@+id/b_hourly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:contentDescription="@string/hourly_forecast"
            android:gravity="center"
            app:srcCompat="@drawable/ic_place_24dp" />

        <ImageView
            android:id="@+id/b_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:contentDescription="@string/alerts"
            android:gravity="center"
            app:srcCompat="@drawable/ic_warning_24dp" />

        <ImageView
            android:id="@+id/b_dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:contentDescription="@string/severe_dashboard"
            android:gravity="center"
            app:srcCompat="@drawable/ic_report_24dp_white" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/tab"
        style="@android:style/TextAppearance.Small"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dip"
        android:gravity="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/cc"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dip"
        android:gravity="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/updtime"
        style="@android:style/TextAppearance.Small"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dip"
        android:gravity="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/hazard"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dip"
        android:gravity="start"
        android:textColor="@color/yellow" />

    <TextView
        android:id="@+id/forecast"
        style="@android:style/TextAppearance.Small"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dip"
        android:gravity="start"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/widget_time"
        style="@android:style/TextAppearance.Small"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="2dip"
        android:gravity="start"
        android:textColor="@color/white"
        />
</LinearLayout>
