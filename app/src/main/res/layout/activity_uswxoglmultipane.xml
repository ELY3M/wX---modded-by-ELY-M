<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:ctc="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/toolbar_bottom"
            >

            <include layout="@layout/widget_toolbar_top"/>

            <TableLayout
                android:id="@+id/tl"
                android:stretchColumns="*"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dip"
                android:divider="@color/dividerColor"
                android:dividerPadding="0px"
                android:gravity="center"
                >
                <TableRow
                    android:id="@+id/tr1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/rl1"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/tr2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/rl2"
                        />
                </TableRow>
                <joshuatee.wx.ui.TouchImageView2
                    android:id="@+id/iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    />
                <joshuatee.wx.util.ImageMap
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ncar_nexrad_sites"
                    ctc:map="ncar_nexrad_sites"
                    />

            </TableLayout>
        </LinearLayout>
        <include layout="@layout/widget_toolbar_bottom"
                 android:id="@+id/toolbar_bottom" />
    </RelativeLayout>
</RelativeLayout>
    



