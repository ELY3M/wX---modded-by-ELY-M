<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:ctc="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <include layout="@layout/widget_toolbar_bottom"
             android:id="@+id/toolbar_bottom" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/toolbar_bottom"
        >

        <include layout="@layout/widget_toolbar_top_with_spinner"/>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/sv"
            android:scrollbars="none"
            >

            <LinearLayout
                android:id="@+id/ll"
                android:stretchColumns="*"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_ll"
                >

            </LinearLayout>
        </ScrollView>

        <joshuatee.wx.util.ImageMap
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cwa"
            ctc:map="cwamap"/>

    </LinearLayout>
</RelativeLayout>

 

