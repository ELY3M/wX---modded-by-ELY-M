<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:background="@color/primary_blue"
    >
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/severe"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/severeDashboardButton"
            android:backgroundTint="@color/bg_blue"
            app:srcCompat="@drawable/ic_report_24dp_white"
            android:contentDescription="@string/todo" />
        <TextView
            android:id="@+id/severeDashboardText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/severe_dashboard"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/visibleSatelliteButton"
            android:backgroundTint="@color/bg_blue"
            app:srcCompat="@drawable/ic_cloud_24dp_white"
            android:contentDescription="@string/todo" />
        <TextView
            android:id="@+id/visibleSatelliteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/visible_satellite"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wfoButton"
            android:backgroundTint="@color/bg_blue"
            app:srcCompat="@drawable/ic_info_outline_24dp_white"
            android:contentDescription="@string/todo" />
        <TextView
            android:id="@+id/wfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/local_text_products"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hourlyButton"
            android:backgroundTint="@color/bg_blue"
            app:srcCompat="@drawable/ic_place_24dp_white"
            android:contentDescription="@string/todo" />
        <TextView
            android:id="@+id/hourlyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/hourly_forecast"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settingsButton"
            android:backgroundTint="@color/bg_blue"
            app:srcCompat="@drawable/ic_settings_24dp_white"
            android:contentDescription="@string/todo" />
        <TextView
            android:id="@+id/settingsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/settings"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
